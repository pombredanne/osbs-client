{
      "metadata":{
        "name": "{{NAME}}"
      },
      "kind": "Build",
      "apiVersion": "v1beta1",
      "parameters": {
        "source" : {
          "type" : "Git",
          "git" : {
            "uri": "{{GIT_URI}}"
          },
          "sourceSecret": {
            "name": "{{SOURCE_SECRET}}"
          }
        },
        "strategy": {
          "type": "Custom",
          "customStrategy": {
            "image": "buildroot",
            "exposeDockerSocket": true,
            "env": [{
              "name": "DOCK_PLUGINS",
              "value": "TBD"
            }]
          }
        },
        "output": {
          "imageTag": "{{OUTPUT_IMAGE_TAG}}",
          "registry": "{{REGISTRY_URI}}"
        }
      }
}
